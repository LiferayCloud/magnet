#!/usr/bin/env node

import {Magnet} from '../';
import parseArgs from 'minimist';
import log from '../log';

const argv = parseArgs(process.argv.slice(2), {
  alias: {
    h: 'help',
    c: 'config',
    C: 'config-dir',
  },
  boolean: ['h'],
});

if (argv.help) {
  console.log(`
    Description
      Builds the application.
    Usage
      $ magnet build [-c <config file path>] [-C <config dir>]
    Options
      --config, -c        Config file path [default: magnet.config.js]
      --config-dir, -C    Directory to load configuration files from
      --help, -h          Displays this message
  `);
  process.exit(0);
}

const config = argv['config'];
const configDir = argv['config-dir'];
const directory = process.cwd();
const magnet = new Magnet({config, configDir, directory});

magnet.build()
  .catch((error) => {
    log.error(null, error);
    process.exit(1);
  });
